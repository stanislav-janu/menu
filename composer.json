{
	"name": "stanislav-janu/picture",
	"description": "Helper for work with images.",
	"homepage": "https://www.lweb.cz",
	"license": "MIT",
	"authors": [
		{
			"name": "Stanislav JanÅ¯",
			"homepage": "http://lweb.cz"
		}
	],
	"require": {
		"php": ">=7.1.0",
		"ext-gd": "*",
		"nette/http": "^2.3 || ^3.0",
		"nette/utils": "^2.3 || ^3.0",
		"thecodingmachine/safe": "^0.1.13"
	},
	"suggest": {
		"ext-imagick": "to use Picture::blur()"
	},
	"scripts": {
		"t": "vendor/bin/tester tests",
		"sa": "vendor/bin/phpstan analyse src -l 7",
		"cs-t": "temp/nette-coding-standard/ecs check src tests --config temp/nette-coding-standard/coding-standard-php71.yml",
		"cs-f": "temp/nette-coding-standard/ecs check src tests --config temp/nette-coding-standard/coding-standard-php71.yml --fix"
	},
	"require-dev": {
		"phpstan/phpstan": "^0.11",
		"phpstan/phpstan-nette": "^0.11",
		"phpstan/phpstan-deprecation-rules": "^0.11.0",
		"phpstan/phpstan-strict-rules": "^0.11.0",
		"thecodingmachine/phpstan-safe-rule": "dev-master",
		"nette/tester": "^2.1"
	},
	"autoload": {
		"classmap": ["src/"]
	},
	"minimum-stability": "stable"
}
